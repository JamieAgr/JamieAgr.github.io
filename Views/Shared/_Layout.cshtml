<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShowcaseWebdev</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShowcaseWebdev.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <section class="gdpr-consent hide show">

        <div class="gdpr-consent__description">
            <p>
                Deze website gebruikt cookies.
                We gebruiken cookies om content te personaliseren, voor social media en het analyseren
                van verkeer op de website, advertenties.
            </p>
        </div>

        <div class="gdpr-consent__choice">
            <button class="gdpr-consent__button--accept">Ja, natuurlijk</button>
            <button class="gdpr-consent__button--reject">Neu, misschien later</button>
        </div>

    </section>

    <header>
        <nav class="navbar navbar-expand-md navbar-light" style="background-color: lightgrey; border-bottom: 2px solid #000000;">
            <div class="container">
                <a class="navbar-brand" href="/">ShowcaseWebdev</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">About Me</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid" style="padding-right: 0; padding-left: 0;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center text-lg-left text-dark">
                    <p>Stuur een bericht</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center text-lg-right">
                    <a href="/contact" class="btn btn-primary btn-lg">Contact</a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-end text-md-end">
                    <p>© 2024 ShowcaseWebdev. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/gdpr.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>